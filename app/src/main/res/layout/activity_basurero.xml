<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondorestaurante"
    tools:context=".basurero">

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="523dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="78dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:text="BORRAR RESTAURANTE POR NUMERO"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/tvBorrar"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center_horizontal|center_vertical"
            android:hint="NUMERO DE TELEFONO"
            android:inputType="number"
            android:maxLength="9"
            android:textColor="#FFFFFF"
            android:textColorHint="#D3FFFFFF" />

        <ImageView
            android:id="@+id/btBorrar"
            android:layout_width="117dp"
            android:layout_height="106dp"
            android:layout_gravity="bottom|center"
            android:onClick="baja"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cancelar_boton" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>